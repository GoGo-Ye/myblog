---
import config from 'virtual:config'

import { Icon } from '../user'

const footerConf = config.footer
let social = footerConf.social || {}

// If the list does not contain rss, add it
social.rss = {
  label: 'RSS',
  url: '/rss.xml'
}

const footerLink1 = footerConf.links?.filter(({ pos }) => pos === 1) || []
---

<footer class='mx-auto mb-5 mt-16 w-full'>
  <div class='border-t pt-5'>
    <div class='flex flex-col sm:flex-row items-center justify-between gap-y-3 max-sm:gap-y-4'>
      <div class='flex w-full sm:w-1/3 items-center justify-center gap-x-4 gap-y-2 text-muted-foreground max-sm:flex-col [&_a]:text-foreground'>
        {/* Position 1 */}
        {
          footerLink1.length > 0 && (
            <div>
              {footerLink1.map(({ title, link, style }, index) => (
                <span>
                  <a href={link} target='_blank' class={style}>
                    {title}
                  </a>
                  {index < footerLink1.length - 1 && ' â€¢ '}
                </span>
              ))}
            </div>
          )
        }
      </div>
      
      <div class='flex w-full sm:w-1/3 items-center justify-center gap-x-4 gap-y-2 text-muted-foreground max-sm:flex-col [&_a]:text-foreground [&_a]:underline [&_a]:decoration-[0.1px]'>
        {/* Position 2 */}
        <div>
          {config.footer.year}
          {config.author}
          {
            footerConf.links && footerConf.links.length > 0 && (
              <>
                &
                <span>
                  {footerConf.links
                    .filter(({ pos }) => pos === 2)
                    .map(({ title, link, style }) => (
                      <span>
                        <a href={link} target='_blank' class={style}>
                          {title}
                        </a>
                      </span>
                    ))}
                </span>
              </>
            )
          }
        </div>
      </div>
      
      <div class='flex w-full sm:w-1/3 items-center justify-center gap-x-4 gap-y-2 text-muted-foreground max-sm:flex-col [&_a]:text-foreground [&_a]:underline [&_a]:decoration-[0.1px]'>
        {
          footerConf.credits && (
            <span>
              <a href='https://github.com/withastro/astro' target='_blank'>
                Astro
              </a>
              &
              <a href='https://github.com/cworld1/astro-theme-pure' target='_blank'>
                Pure
              </a>
              theme powered
            </span>
          )
        }
      </div>
    </div>
  </div>
</footer>
